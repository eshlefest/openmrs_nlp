<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.bannerprototype">


	<class name="SofaText"
		table="sofatext">
		<id name="sofaTextId" type="int" column="sofatext_id" unsaved-value="0">
			<generator class="native" />
		</id>
		<discriminator column="sofatext_id" insert="false" />
		<property name="uuid" type="java.lang.String" column="uuid"
			length="38" unique="true" />
		
		<property name="encounterId" type="int" column="encounter_id" />
		<property name="text" type="java.lang.String" column="text" />
	</class>
	
	<class name="SofaTextMention"
		table="sofatext_mention">
		<id name="sofaTextMentionId" type="int" column="sofatext_mentionf_id" unsaved-value="0">
			<generator class="native" />
		</id>
		<discriminator column="sofatext_mention_id" insert="false" />
		<property name="uuid" type="java.lang.String" column="uuid"
			length="38" unique="true" />
		
		<property name="sofatextId" type="int" column="sofatext_id" />
		<property name="mentionText" type="java.lang.String" column="mention_text" />
		<property name="mentionStart" type="int" column="mention_start" />
		<property name="mentionEnd" type="int" column="mention_end" />
		<property name="mentionType" type="java.lang.String" column="mention_type" />
		<property name="mentionReviewed" type="boolean" column="mention_reviewed" />
		<property name="mentionCorrect" type="boolean" column="mention_correct" />
	</class>
	
	<class name="SofaTextMentionConcept"
		table="sofatext_mention_concept">
		<id name="sofaTextMentionConceptId" type="int" column="sofatext_mentionf_concept_id" unsaved-value="0">
			<generator class="native" />
		</id>
		<discriminator column="sofatext_mention_concept_id" insert="false" />
		<property name="uuid" type="java.lang.String" column="uuid"
			length="38" unique="true" />
		
		<property name="sofatextMentionId" type="int" column="sofatext_mention_id" />
		<property name="conceptId" type="int" column="concept_id" />
		<property name="conceptReviewed" type="boolean" column="concept_reviewed" />
		<property name="conceptCorrect" type="boolean" column="concept_correct" />
	</class>


</hibernate-mapping>
